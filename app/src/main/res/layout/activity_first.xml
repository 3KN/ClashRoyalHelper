<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.alex.smallapp.First">


    <Button
        android:layout_width="200dp"
        android:text="Make a deck"
        android:id="@+id/picker_btn"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/border12"
        android:textColor="#b983ed"
        android:textStyle="bold"
        android:layout_height="45dp"
        />

    <Button
        android:layout_width="200dp"

        android:text="Arenas"
        android:id="@+id/arena_btn"
        android:layout_below="@+id/picker_btn"
        android:layout_alignLeft="@+id/picker_btn"
        android:layout_alignStart="@+id/picker_btn"
        android:layout_alignRight="@+id/strategy_btn"
        android:layout_alignEnd="@+id/strategy_btn"
        android:layout_marginBottom="30dp"
        android:background="@drawable/border12"
        android:textColor="#b983ed"
        android:textStyle="bold"
        android:layout_height="45dp"
        />

    <Button
        android:layout_width="200dp"

        android:text="Strategies"
        android:id="@+id/strategy_btn"
        android:layout_below="@+id/arena_btn"
        android:layout_alignLeft="@+id/picker_btn"
        android:layout_alignStart="@+id/picker_btn"
        android:layout_alignRight="@+id/picker_btn"
        android:layout_alignEnd="@+id/picker_btn"
        android:background="@drawable/border12"
        android:textColor="#b983ed"
        android:textStyle="bold"
        android:layout_height="45dp"
        />

    <Button
        android:layout_width="200dp"
        android:text="Cards"
        android:id="@+id/card_btn"
        android:layout_below="@+id/strategy_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/border12"
        android:textColor="#b983ed"
        android:textStyle="bold"
        android:layout_height="45dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:background="@drawable/header"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />


</RelativeLayout>
